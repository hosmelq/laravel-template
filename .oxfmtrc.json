{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "bracketSpacing": false,
  "experimentalSortImports": {
    "groups": [
      ["builtin"],
      ["external"],
      ["internal"],
      ["parent", "sibling", "index"],
      ["unknown"]
    ],
    "internalPattern": ["#/"]
  },
  "experimentalTailwindcss": {
    "functions": ["cn"],
    "stylesheet": "./resources/js/index.css"
  },
  "ignorePatterns": [
    "*.css",
    "*.json",
    "*.yml",
    ".agents",
    ".prettierrc",
    "AGENTS.md",
    "boost.json",
    "opencode.json",
    "storage"
  ],
  "semi": false,
  "singleQuote": true
}
